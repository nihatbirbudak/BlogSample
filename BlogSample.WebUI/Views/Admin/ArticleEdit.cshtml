
@{
    ViewData["Title"] = "ArticleEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ArticleViewModel

@section pageHeader{
    <div class="note note-info">
        <p> Sistem Article güncelleme sayfası </p>
    </div>
}

@*Html Editör Package*@
@section BeginPage{
    <link href="~/assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-summernote/summernote.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
}



<div class="row">
    <div class="col-md-6">
        <div class="portlet box blue ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Makale Güncelleme
                </div>
                <div class="tools">
                    <a href="" class="collapse"> </a>
                    <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                    <a href="" class="reload"> </a>
                    <a href="" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body form">

                <form asp-action="ArticleEdit" enctype="multipart/form-data" class="form-horizontal form-bordered">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">

                        <div class="form-group">
                            <label asp-for="ArticleDTO.Title" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input class="form-control" placeholder="Name" asp-for="ArticleDTO.Title">
                                <span asp-validation-for="ArticleDTO.Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group last">
                            <label class="control-label col-md-2" asp-for="ArticleDTO.Content"></label>
                            <div class="col-md-10">
                                <textarea asp-for="ArticleDTO.Content" id="summernote_1"> </textarea>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="ArticleDTO.Picture" class="control-label"></label>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <img class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                <div>
                                    <span class="btn red btn-outline btn-file">
                                        <span class="fileinput-new"> Select image </span>
                                        <span class="fileinput-exists"> Change </span>
                                        <input class="form-control" type="file" asp-for="File">
                                    </span>
                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <input type="hidden" class="form-control" asp-for="ArticleDTO.UserId" value="4">
                            <input type="hidden" class="form-control" asp-for="ArticleDTO.Id">

                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <select asp-for="ArticleDTO.CategoryId" class="form-control" asp-items="@(new SelectList(Model.CategoryDTOs,"Id","Name"))"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ArticleDTO.IsRelease" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                @Html.CheckBoxFor(z => z.ArticleDTO.IsRelease)
                                <span asp-validation-for="ArticleDTO.IsRelease" class="text-danger"></span>
                            </div>
                        </div>


                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Save</button>
                        <button type="button" class="btn danger">Cancel</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
    <div class="col-md-6">

    </div>

</div>





@*Html Editör Plugin*@
@section FooterJsPlugin{
    <script src="~/assets/global/plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-markdown/lib/markdown.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-markdown/js/bootstrap-markdown.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-summernote/summernote.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>
}
@section BeginPageJS{
    <script src="~/assets/pages/scripts/components-editors.min.js" type="text/javascript"></script>
}