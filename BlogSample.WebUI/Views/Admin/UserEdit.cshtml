
@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserViewModel
<div class="row">
    <div class="col-md-6">
        <div class="portlet box blue ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Kullanıcı Ekleme
                </div>
                <div class="tools">
                    <a href="" class="collapse"> </a>
                    <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                    <a href="" class="reload"> </a>
                    <a href="" class="remove"> </a>
                </div>
            </div>
            <div class="portlet-body form">

                <form asp-action="UserEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-body">

                        <div class="form-group">

                            <input class="form-control" placeholder="Full Name" asp-for="UserDTO.Id">
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(z => z.UserDTO.FullName)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input class="form-control" placeholder="Full Name" asp-for="UserDTO.FullName">
                                <span asp-validation-for="UserDTO.FullName" id="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserDTO.UserName" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input class="form-control" placeholder="Full Name" asp-for="UserDTO.UserName">
                                <span asp-validation-for="UserDTO.UserName" id="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserDTO.Mail" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input class="form-control" placeholder="Name" asp-for="UserDTO.Mail">
                                <span asp-validation-for="UserDTO.Mail" id="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserDTO.Phone" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input class="form-control" placeholder="Name" asp-for="UserDTO.Phone">
                                <span asp-validation-for="UserDTO.Phone" id="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserDTO.RoleId" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <select asp-for="UserDTO.RoleId" class="form-control" asp-items="@(new SelectList(Model.RoleDTOs,"Id","Name"))"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Save</button>
                        <button type="button" class="btn red">Cancel</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
    <div class="col-md-6"></div>

</div>

