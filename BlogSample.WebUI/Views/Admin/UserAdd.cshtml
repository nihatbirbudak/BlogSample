@model UserDTO

@{
    ViewData["Title"] = "UserAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-6">
            <div class="portlet box blue ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Kategori Bilgileri
                    </div>
                    <div class="tools">
                        <a href="" class="collapse"> </a>
                        <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                        <a href="" class="reload"> </a>
                        <a href="" class="remove"> </a>
                    </div>
                </div>
                <div class="portlet-body form">

                    <form asp-action="UserAdd">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-body">

                            <div class="form-group">
                                @Html.LabelFor(z => z.FullName)
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input class="form-control" placeholder="Full Name" asp-for="FullName">
                                    <span asp-validation-for="FullName" id="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input class="form-control" placeholder="Full Name" asp-for="UserName">
                                    <span asp-validation-for="UserName" id="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Mail" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input class="form-control" placeholder="Name" asp-for="Mail">
                                    <span asp-validation-for="Mail" id="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input class="form-control" placeholder="Name" asp-for="Phone">
                                    <span asp-validation-for="Phone" id="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Save</button>
                            <button type="button" class="btn red">Cancel</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <div class="col-md-6"></div>

    </div>

